@inject UserManager<UserEntity> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}
@if(user != null)
{
    <section class="account-profile">
        <div class="profile">
            <div class="profile-image-container">
                <img class="profile-image"src="~/images/uploads/profiles/@user.ProfilePicture" alt="@user.FirstName @user.LastName" />
                    <form enctype="multipart/form-data" method="post" asp-action="UploadProfilePicture" asp-controller="Account">
                        <input id="fileUploader" type="file" name="file" hidden="form.submit()"  />
                        <label for="fileUploader" class="btn-refresh"><i class="fa-solid fa-arrows-rotate"></i></label>
                    </form>
            </div>

            
            <div class="profile-info">
                <h5>@user.FirstName @user.LastName</h5>
                <p>@user.Email</p>            
            </div>
            <div class="buttons-container">
                <a class="account-details-button btn-theme" asp-action="Details" asp-controller="Account"><i class="fa-solid fa-gear"></i> Account Details</a>
                <a class="signout-button btn-theme" asp-action="SignOut" asp-controller="Auth"><i class="fa-solid fa-sign-out"></i> Sign Out</a>

            </div>
        </div>

    </section>    
}
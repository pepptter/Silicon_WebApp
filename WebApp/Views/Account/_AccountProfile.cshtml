@inject UserManager<UserEntity> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}
@if(user != null)
{
    <section class="account-profile">
        <div class="profile">
            <div class="profile-image">
                <img src="~/images/uploads/profiles/@user.ProfilePicture" alt="@user.FirstName @user.LastName" />
            </div>
            <div class="upload-button">
                <form enctype="multipart/form-data" method="post" asp-action="UploadProfilePicture" asp-controller="Account">
                <input id="fileUploader" type="file" name="file" hidden="form.submit()" />
                <label for="fileUploader" class="btn btn-circle-sm"><i class="fa-solid fa-arrows-rotate"></i></label>
            </form>
            </div>
            
            <div class="profile-info">
                <h3 class="displayname">@user.FirstName @user.LastName</h3>
                <p>@user.Email</p>            
        </div>

    </section>    
}